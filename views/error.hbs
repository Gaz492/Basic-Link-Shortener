{{#> layout/bulma}}
    {{#*inline "content-block"}}
        <section class="hero is-info is-fullheight">
            <div class="hero-body">
                <div class="container has-text-centered">
                    <div class="column is-6 is-offset-3">
                        <h1 class="title">Wuffs
                            <small>.dev</small>
                        </h1>
                        <h2 class="subtitle">Oops, something's wrong...</h2>
                        {{#if invalidURL}}
                            <h2 class="subtitle">We were unable to find the URL you clicked, it may have been deleted or
                                never existed</h2>
                        {{/if}}
                        <div class="box">
                            <div class="field is-grouped">
                                <p class="control is-expanded">
                                    <input class="input" type="url" placeholder="Enter a URL to shorten">
                                </p>
                                <p class="control">
                                    <a class="button is-info">
                                        Shorten!
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    {{/inline}}
{{/layout/bulma}}
